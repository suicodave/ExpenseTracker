@inject HttpClient _http
@inject ISnackbar _snackbar
@inject OrganizationAppState _organizationAppState


<MudMenuItem OnClick="SetAsDefault">Set As Default</MudMenuItem>




@code {
    [Parameter, EditorRequired]
    public int Id { get; set; }


    private async Task SetAsDefault()
    {

        _snackbar.Add("Setting as default organization. Please wait.", Severity.Info);

        var response = await _organizationAppState.SetAsDefault(Id);

        if (response.IsSuccessStatusCode)
        {
            _snackbar.Add("Saved successfully.", Severity.Success);
        }

        return;
    }
}